        {
            "title": "Host CPU Usage",
            "type": "stat",
            "gridPos": {
                "h": 8,
                "w": 6,
                "x": 0,
                "y": 1
            },
            "datasource": {
                "type": "prometheus",
                "uid": "Prometheus"
            },
            "pluginVersion": "10.2.2",
            "targets": [
                {
                    "expr": "100 - (avg by (instance) (rate(windows_cpu_time_total{mode=\"idle\"}[2m])) * 100)",
                    "refId": "A"
                }
            ],
            "options": {
                "reduceOptions": {
                    "calcs": [
                        "lastNotNull"
                    ],
                    "fields": "",
                    "values": false
                },
                "orientation": "auto",
                "graphMode": "area",
                "colorMode": "value",
                "unit": "percent"
            }
        },
        {
            "title": "Host Memory Usage",
            "type": "stat",
            "gridPos": {
                "h": 8,
                "w": 6,
                "x": 6,
                "y": 1
            },
            "datasource": {
                "type": "prometheus",
                "uid": "Prometheus"
            },
            "targets": [
                {
                    "expr": "100 * (1 - (windows_memory_free_bytes / windows_memory_total_bytes))",
                    "refId": "A"
                }
            ],
            "options": {
                "reduceOptions": {
                    "calcs": [
                        "lastNotNull"
                    ],
                    "fields": "",
                    "values": false
